#!/bin/bash

# Stop the Nginx service if it's currently running
service nginx stop

# Update the Nginx configuration to run as the nginx user
sed -i 's/user\s*nginx;/user root;/' /etc/nginx/nginx.conf

# Modify the Nginx default site configuration to listen on port 8080
sed -i 's/listen\s*80;/listen 8080;/g' /etc/nginx/sites-available/default

# Start the Nginx service with the modified configuration
service nginx start

# Verify that Nginx is running as the nginx user
ps aux | grep nginx
